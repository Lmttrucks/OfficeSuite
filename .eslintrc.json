{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": [
      "warn",
      { "args": "none" }
    ],
    "import/order": [
      "warn",
      { "groups": [ [ "builtin", "external", "internal" ] ] }
    ],
    "jsx-a11y/anchor-is-valid": "warn",
    "no-console": "warn",
    "indent": [ "error", 2 ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ],
    "comma-dangle": [ "error", "never" ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}